@model WebQLDA.Controllers.HomeController

<form method="post" action="/Home/Login" id="loginForm">
    <!-- Form đăng nhập -->
    <div>
        <label for="taiKhoan">Tài khoản:</label>
        <input type="text" id="taiKhoanLogin" name="taiKhoan" required />   
    </div>
    <div>
        <label for="matKhau">Mật khẩu:</label>
        <input type="password" id="matKhauLogin" name="matKhau" required />
    </div>
    <div>
        <button type="submit">Đăng nhập</button>
        <button type="button" id="btnSwitchToRegister">Đăng ký</button>
    </div>
</form>

<form method="post" action="/Home/Register"  id="registerForm" style="display: none;">
    <!-- Form đăng ký -->
    <div>
        <label for="taiKhoan">Tài khoản:</label>
        <input type="text" id="taiKhoanRegister" name="taiKhoan" required />
    </div>
    <div>
        <label for="ten">Tên:</label>
        <input type="text" id="ten" name="ten" required />
    </div>
    <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required />
    </div>
    <div>
        <label for="matKhau">Mật khẩu:</label>
        <input type="password" id="matKhauRegister" name="matKhau" required />
    </div>
    <div>
        <label for="xacNhanMatKhau">Xác nhận mật khẩu:</label>
        <input type="password" id="xacNhanMatKhau" name="xacNhanMatKhau" required />
    </div>
    <div>
        <label for="soDienThoai">Số điện thoại:</label>
        <input type="text" id="soDienThoai" name="soDienThoai" required />
    </div>
    <div>
        <button type="submit">Đăng ký</button>
        <button type="button" id="btnSwitchToLogin">Đăng nhập</button>
    </div>
</form>

<script>
    $(document).ready(function () {
        $("#btnSwitchToRegister").click(function () {
            $("#loginForm").hide();
            $("#registerForm").show();
        });

        $("#btnSwitchToLogin").click(function () {
            $("#registerForm").hide();
            $("#loginForm").show();
        });
    });
</script>
